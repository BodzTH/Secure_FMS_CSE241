# Environment Variables Template
# Copy this file and name it .env then modify the values

# Server Port
PORT=3000

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/secure_fms

# JWT Secret Key (Use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# AES-256 Encryption Key (32 bytes in hex format)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_your_own_key_using_crypto_randomBytes
